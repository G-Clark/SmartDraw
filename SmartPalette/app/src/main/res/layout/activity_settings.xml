<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pre_window_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:maxLines="1"
                android:text="@string/menu_settings"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen_18sp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/close"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen_16dp"
                app:srcCompat="@drawable/ic_close" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@android:color/black" />

        <RelativeLayout
            android:id="@+id/screen_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:minHeight="@dimen/dimen_40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_toStartOf="@+id/switch_btn"
                android:gravity="start|center_vertical"
                android:text="@string/show_screen_set_again"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen_14sp" />

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/switch_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:paddingBottom="@dimen/dimen_4dp"
                android:paddingEnd="@dimen/dimen_5dp"
                android:paddingStart="@dimen/dimen_5dp"
                android:paddingTop="@dimen/dimen_4dp"
                app:kswTintColor="@color/color_switch" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>