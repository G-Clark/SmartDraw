<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.step.smart.palette.widget.PaletteView
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/tools"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tools_h"
            android:layout_gravity="bottom|start"
            android:layout_margin="@dimen/tools_margin"
            android:background="@drawable/suspend_icon_shape"
            android:clipChildren="false"
            android:elevation="@dimen/tools_elevation"
            android:minHeight="@dimen/tools_min_w"
            android:minWidth="@dimen/tools_min_h"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/save"
                android:layout_width="@dimen/tools_item_layout_w"
                android:layout_height="@dimen/tools_item_layout_h"
                android:layout_marginStart="@dimen/tools_item_margin_s"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/tools_item_w"
                    android:layout_height="@dimen/tools_item_h"
                    android:scaleType="fitCenter"
                    android:src="@drawable/save_bg_selector" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/stroke"
                android:layout_width="@dimen/tools_item_layout_w"
                android:layout_height="@dimen/tools_item_layout_h"
                android:background="@drawable/btn_sel_bg"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/stroke_img"
                    android:layout_width="@dimen/tools_item_w"
                    android:layout_height="@dimen/tools_item_h"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_pen" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/move"
                android:layout_width="@dimen/tools_item_layout_w"
                android:layout_height="@dimen/tools_item_layout_h"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/tools_item_w"
                    android:layout_height="@dimen/tools_item_h"
                    android:scaleType="fitCenter"
                    android:src="@drawable/move" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/eraser"
                android:layout_width="@dimen/tools_item_layout_w"
                android:layout_height="@dimen/tools_item_layout_h"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/tools_eraser_item_w"
                    android:layout_height="@dimen/tools_eraser_item_h"
                    android:scaleType="fitCenter"
                    android:src="@drawable/eraser" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/undo"
                android:layout_width="@dimen/tools_item_layout_w"
                android:layout_height="@dimen/tools_item_layout_h"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/undo_img"
                    android:layout_width="@dimen/tools_item_w"
                    android:layout_height="@dimen/tools_item_h"
                    android:scaleType="fitCenter"
                    android:src="@drawable/undo_sel" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/redo"
                android:layout_width="@dimen/tools_item_layout_w"
                android:layout_height="@dimen/tools_item_layout_h"
                android:layout_marginEnd="@dimen/tools_item_margin_e"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/redo_img"
                    android:layout_width="@dimen/tools_item_w"
                    android:layout_height="@dimen/tools_item_h"
                    android:scaleType="fitCenter"
                    android:src="@drawable/redo_sel" />
            </RelativeLayout>
        </LinearLayout>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/choose_bg_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            fab:fab_colorNormal="#FAFAFA"
            fab:fab_colorPressed="#F5F5F5"
            fab:fab_colorRipple="#FFFFFF"
            fab:fab_shadowColor="#000"
            android:src="@drawable/ic_droplet"
            fab:fab_size="mini"
            android:elevation="10dp"
            />

        <LinearLayout
            android:id="@+id/record_status"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_gravity="top|end"
            android:visibility="gone"
            android:elevation="10dp"
            android:background="@drawable/record_bg">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:src="@drawable/ic_stop"/>
            <TextView
                android:id="@+id/record_time"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="3dp"
                android:text="@string/record_time_def"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:elevation="10dp"
            fab:menu_labels_ellipsize="end"
            fab:menu_labels_singleLine="true"
            fab:menu_backgroundColor="#ccffffff"
            fab:menu_fab_label="@string/menu">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_record"
                fab:fab_size="mini"
                fab:fab_label="@string/menu_record" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_preview"
                fab:fab_size="mini"
                fab:fab_label="@string/menu_preview" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings"
                fab:fab_size="mini"
                fab:fab_label="@string/menu_settings" />
        </com.github.clans.fab.FloatingActionMenu>
    </FrameLayout>

</FrameLayout>