<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.step.smart.palette.widget.PaletteView
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/tools"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="bottom|start"
            android:layout_margin="10dp"
            android:clipChildren="false"
            android:minHeight="@dimen/tools_min_w"
            android:minWidth="@dimen/tools_min_h"
            android:orientation="horizontal"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/save"
                android:layout_width="@dimen/tools_item_layout_w"
                android:layout_height="@dimen/tools_item_layout_h"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/tools_item_margin_s"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/tools_item_w"
                    android:layout_height="@dimen/tools_item_h"
                    android:scaleType="fitCenter"
                    android:src="@drawable/save_bg_selector" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/stroke"
                android:layout_width="@dimen/tools_item_layout_w"
                android:layout_height="@dimen/tools_item_layout_h"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_sel_bg"
                android:gravity="center">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/stroke_img"
                    android:layout_width="@dimen/tools_item_w"
                    android:layout_height="@dimen/tools_item_h"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_pen" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/move"
                android:layout_width="@dimen/tools_item_layout_w"
                android:layout_height="@dimen/tools_item_layout_h"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/tools_item_w"
                    android:layout_height="@dimen/tools_item_h"
                    android:scaleType="fitCenter"
                    android:src="@drawable/move" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/eraser"
                android:layout_width="@dimen/tools_item_layout_w"
                android:layout_height="@dimen/tools_item_layout_h"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/tools_eraser_item_w"
                    android:layout_height="@dimen/tools_eraser_item_h"
                    android:scaleType="fitCenter"
                    android:src="@drawable/eraser" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/undo"
                android:layout_width="@dimen/tools_item_layout_w"
                android:layout_height="@dimen/tools_item_layout_h"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/undo_img"
                    android:layout_width="@dimen/tools_item_w"
                    android:layout_height="@dimen/tools_item_h"
                    android:scaleType="fitCenter"
                    android:src="@drawable/undo_sel" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/redo"
                android:layout_width="@dimen/tools_item_layout_w"
                android:layout_height="@dimen/tools_item_layout_h"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/tools_item_margin_e"
                android:gravity="center">

                <ImageView
                    android:id="@+id/redo_img"
                    android:layout_width="@dimen/tools_item_w"
                    android:layout_height="@dimen/tools_item_h"
                    android:scaleType="fitCenter"
                    android:src="@drawable/redo_sel" />
            </RelativeLayout>
        </LinearLayout>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/choose_bg_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/ic_droplet"
            fab:fab_colorNormal="#FAFAFA"
            fab:fab_colorPressed="#F5F5F5"
            fab:fab_colorRipple="#FFFFFF"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/choose_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="120dp"
            app:srcCompat="@drawable/ic_droplet"
            fab:fab_colorNormal="#458e48"
            fab:fab_colorPressed="#5b0e0e"
            fab:fab_colorRipple="#1c3acf"
            fab:fab_size="mini" />

        <LinearLayout
            android:id="@+id/record_status"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="top|end"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                app:srcCompat="@drawable/ic_stop" />

            <TextView
                android:id="@+id/record_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="3dp"
                android:maxLines="1"
                android:text="@string/record_time_def"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            fab:menu_backgroundColor="#ccffffff"
            fab:menu_fab_label="@string/menu"
            fab:menu_labels_ellipsize="end"
            fab:menu_labels_singleLine="true">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_record"
                android:visibility="gone"
                fab:fab_label="@string/menu_record"
                fab:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_preview"
                fab:fab_label="@string/menu_preview"
                fab:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings"
                fab:fab_label="@string/menu_settings"
                fab:fab_size="mini" />
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share"
                fab:fab_label="@string/menu_share"
                fab:fab_size="mini" />
        </com.github.clans.fab.FloatingActionMenu>
    </FrameLayout>

</FrameLayout>