<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@android:color/holo_orange_light" />
                    <size android:width="@dimen/paint_col_size" android:height="@dimen/paint_col_size" />
                </shape>
            </item>
            <item android:bottom="@dimen/paint_col_ltrb" android:left="@dimen/paint_col_ltrb" android:right="@dimen/paint_col_ltrb" android:top="@dimen/paint_col_ltrb">
                <shape android:shape="oval">

                    <stroke android:width="@dimen/paint_col_ltrb" android:color="@android:color/white" />
                    <size android:width="@dimen/paint_col_size" android:height="@dimen/paint_col_size" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@android:color/holo_orange_light" />
                    <size android:width="@dimen/paint_col_size" android:height="@dimen/paint_col_size" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>